<div class="name"> Get to Work on Time </div>


<div class="signup">
<%= form_for (@user) do |f| %>

  <div class="field">
    <%= f.label :name , class:"label" %>
    <%= f.text_field :full_name , placeholder:"First & Last Name" %>
  </div>

  <div class="field">
    <%= f.label :email , class:"label"%>
    <%= f.email_field :email , placeholder:"Enter email" %>
  </div>

  <div class="field">
    <%= f.label :password , class:"label" %>
    <%= f.password_field :password_digest, placeholder:"Enter Password" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, class:"label" %>
    <%= f.text_field :phone_number , placeholder:"Enter number with no dashes" %>
  </div>

  <div class="field">
    <%= f.label :train_lines , class:"label"%>
    <%= f.text_field :train_lines, placeholder:" EXAMPLE: G L 7 " %>
  </div>

   <div class="field">
    <%= f.label :commute_time , class:"label" %>
    <%= f.text_field :commute_time, placeholder:"EXAMPLE: 60" %>
  </div>

  <div class="field">
    <%= f.label :monday , class:"label"%>
    <%= f.time_field :monday %>
  </div>

  <div class="field">
    <%= f.label :tuesday ,class:"label" %>
    <%= f.time_field :tuesday %>
  </div>

<div class="field">
    <%= f.label :wednesday , class:"label" %>
    <%= f.time_field :wednesday %>
  </div>

  <div class="field">
    <%= f.label :thursday , class:"label" %>
    <%= f.time_field :thursday %>
  </div>

   <div class="field">
    <%= f.label :friday , class:"label" %>
    <%= f.time_field :friday %>
  </div>

 <div class="field">
    <%= f.label :saturday , class:"label" %>
    <%= f.time_field :saturday %>
  </div>

 <div class="field">
    <%= f.label :sunday , class:"label" , :size => 6 %>
    <%= f.time_field :sunday %>
  </div>


 <%= submit_tag "Submit", class:"btn waves-effect grey darken-" %>
 <%= link_to "Back", root_path, class: "btn waves-effect grey darken-" %>

<% end %>
  </div>


