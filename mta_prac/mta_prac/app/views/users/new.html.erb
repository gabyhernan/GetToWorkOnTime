<h1> Create a new Account </h1>

<%= form_for (@user) do |f| %>

  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email , placeholder:"Enter email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password_digest, placeholder:"Enter Password" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :train_lines %>
    <%= f.text_field :train_lines %>
  </div>

   <div class="field">
    <%= f.label :commute_time %>
    <%= f.text_field :commute_time %>
  </div>

  <div class="field">
    <%= f.label :monday %>
    <%= f.time_field :monday %>
  </div>

  <div class="field">
    <%= f.label :tuesday %>
    <%= f.time_field :tuesday %>
  </div>

<div class="field">
    <%= f.label :wednesday %>
    <%= f.time_field :wednesday %>
  </div>

  <div class="field">
    <%= f.label :thursday %>
    <%= f.time_field :thursday %>
  </div>

   <div class="field">
    <%= f.label :friday %>
    <%= f.time_field :friday %>
  </div>

 <div class="field">
    <%= f.label :saturday %>
    <%= f.time_field :saturday %>
  </div>

 <div class="field">
    <%= f.label :sunday %>
    <%= f.time_field :sunday %>
  </div>

   <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>


  <div class="actions">
 <%= submit_tag "Submit", class:"waves-effect waves- btn" %>

<% end %>
  </div>

<%= link_to "Back", root_path, class: "waves-effect waves- btn white-text" %>
